@model MiniBlog.ViewModels.PostViewModel

<!DOCTYPE html>

<main>
    <article>
        <h2>@Model.Post.Title</h2>
        <h3>@Model.Post.Description</h3>
        <p>@Model.Post.Content</p>
        <footer>
            <p>Written on <time>@Model.Post.CreatedOn</time> from @Model.Post.User.Username</p>
        </footer>
    </article>
    <h2>Comments</h2>
    @foreach (var comment in Model.Post.Comment)
    {
        <article>
            <h6>@comment.User.Username - @comment.CreatedOn</h6>
            <p>->@comment.Commet</p>
        </article>
        <hr />
    }
    <h3>Add Comment</h3>
    <section id="commentForm">
        @using (Html.BeginForm("AddComment", "Post", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="col-md-10">
                    <input type="text" name="comment" />
                    <input type="hidden" name="postid" value="@Model.Post.Id" />

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kommentieren" class="btn btn-default" />
                </div>
            </div>
        }
    </section>
</main>

